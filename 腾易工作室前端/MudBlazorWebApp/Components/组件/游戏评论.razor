@using MudBlazorWebApp.Models
@code {
    [Parameter]
    public GamePageModel comment { get; set; } = new GamePageModel();
}

<MudPaper Elevation="4" Class="px-4 my-4">
    <MudIcon Icon="@Icons.Material.Filled.Person" Color="Color.Primary"></MudIcon> <MudText Style="vertical-align:top" Inline="true">@comment.NickName</MudText>
    <MudText>@comment.Content</MudText>
    <MudText Align="Align.Right">@comment.DateTime</MudText>
    <MudRating SelectedValue="@comment.Score" ReadOnly></MudRating>
</MudPaper>